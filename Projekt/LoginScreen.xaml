<Window x:Class="Projekt.LoginScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Projekt"
        mc:Ignorable="d"
        Title="Login" Height="300" Width="300" FontSize="14">
    <StackPanel Margin="20">
        <Label Content="Login" Foreground="Black" FontSize="25" HorizontalAlignment="Center"/>
        <Label Content="Username"/>
        <TextBox Name="txtUsername" Background="LightGray" FontSize="18"/>
        <Label Content="Password"/>
        <PasswordBox Name="txtPassword" PasswordChar="*" Background="LightGray" FontSize="18"/>
        <Button Name="btnSubmit" Content="Submit" Margin="60 10" Background="LightGray" FontSize="18" Click="btnSubmit_Click"/>
    </StackPanel>
</Window>
